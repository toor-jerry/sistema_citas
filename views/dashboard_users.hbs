
{{> head }}


<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    {{> sidebar_dashboard }}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            {{> top_bar_dashboard }}
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">Usuarios</h1>
                <p class="mb-4">Usuarios actualmente registrados:</p>

                <!-- Users -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary text-center">Control de usuarios</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Apellidos</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Area</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="tbody_users">
                                    {{#each users}}
                                    <tr id="{{this._id}}-field">
                                        <td>{{this.name}}</td>
                                        <td>{{this.last_name}}</td>
                                        <td>{{this.email}}</td>
                                        <td>
                                        {{#if (admin this.role)}}
                                            <span class="badge badge-pill badge-danger">{{this.role}}</span>
                                        {{else}}
                                        
                                            <span class="badge badge-pill badge-success">{{this.role}}</span>
                                        {{/if}}
                                        </td>
                                        <td class="text-primary">
                                            {{this.area.name}}
                                        </td>
                                        <td class="text-center">
                                            <a class="btn btn-danger" onclick="deleteUser('{{this._id}}')">
                                            <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Page Wrapper -->


        <!-- Footer -->
        {{> footer_dashboard }}
        <!-- End of Footer -->
    </div>
    <!-- End of Main Content -->
</div>
<!-- End of Page Wrapper -->
    
{{> end_file }}

<!-- Page level plugins -->
    <script src="/libs/datatables/jquery.dataTables.min.js"></script>
    <script src="/libs/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="/js/demo/datatables-demo.js"></script>
    <script src="/js/function_dashboard_user.js"></script>

