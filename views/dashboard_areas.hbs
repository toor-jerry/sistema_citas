 {{> head }}


<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    {{> sidebar_dashboard }}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            {{> top_bar_dashboard }}
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col">
                        <h1 class="h3 mb-2 text-gray-800">Areas</h1>
                    </div>
                    <div class="col text-right">
                        <button class="btn btn-success btn-lg" data-toggle="modal" data-target="#areaModal"><i class="fa fa-plus" aria-hidden="true"></i> Agregar</button>
                    </div>
                </div>
                <p class="mb-4">Areas actualmente registrados:</p>

                <!-- Areas -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary text-center">Control de areas</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Descripcion</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="tbody_areas">
                                    {{#each areas}}
                                    <tr id="{{this._id}}-field">
                                        <td>{{this.name}}</td>
                                        <td>{{this.description}}</td>
                                        <td class="text-center">
                                            <a class="btn btn-danger" onclick="deleteArea('{{this._id}}')">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Page Wrapper -->
        <!-- New area Modal-->
        {{> modal_area}}

        <!-- Footer -->
        {{> footer_dashboard }}
        <!-- End of Footer -->
    </div>
    <!-- End of Main Content -->
</div>
<!-- End of Page Wrapper -->

{{> end_file }}

<!-- Page level plugins -->
<script src="/libs/datatables/jquery.dataTables.min.js"></script>
<script src="/libs/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="/js/demo/datatables-demo.js"></script>
<script src="/js/function_dashboard_area.js"></script>